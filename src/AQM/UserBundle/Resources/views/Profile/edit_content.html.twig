{#{% extends 'AQMUserBundle::layout.html.twig' %}#}

{% block body %}
    <div class="well">
        {% block fos_user_content %}
            <h2><i class="fa fa-user"></i> Mon profil</h2>
            <div align="right">
                <a href="{{ path('fos_user_change_password') }}" class="btn btn-default"><i class="fa fa-lock"></i> Modifier mon mot de passe</a>
            </div>
            {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
            <div class="form-group">
                {{ form_label(form.username, "Nom d'utilisateur", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.username) }}
                <div class="col-sm-10">
                    {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.email, "Email", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.email) }}
                <div class="col-sm-10">
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.current_password, "Mot de passe", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.current_password) }}
                <div class="col-sm-10">
                    {{ form_widget(form.current_password, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div>
                <input id="edit_submit_btn" type="submit" style="display: none" />
                <label for="edit_submit_btn" class="btn btn-success"><i class="fa fa-check"></i> Editer mon profil</label>
            </div>
            {{ form_end(form) }}
        {% endblock %}
    </div>
{% endblock %}